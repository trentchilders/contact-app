<h1> Edit this contact </h1>

<%= form_tag "/contacts/#{@contact_id}", method: :patch do %>
  <div>
    
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @contact.first_name %>

  </div>

  <div>
    
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @contact.last_name%>

  </div>

  <div>
    
    <%= label_tag :email %>
    <%= text_field_tag :email, @contact.email%>

  </div>

  <div>
    
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @contact.phone_number%>

  </div>

  <div>
    
    <%= label_tag :latitude %>
    <%= text_field_tag :latitude, @contact.latitude%>
  </div>

  <div>
    
    <%= label_tag :longitude %>
    <%= text_field_tag :longitude, @contact.latitude%>
  </div>

  <%= submit_tag 'Submit' %>
<% end %>